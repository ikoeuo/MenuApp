<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuApp.Pages.SummaryPage"
             Title="">

    <ScrollView>
        
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label/>

            <Label 
                x:Name="newOrderBill"
                Text="Order Bill"
                FontSize="40"
                FontAttributes="Bold"
                HorizontalOptions="Center"/>
            <Label 
                x:Name="newItemsPrice"
                Text="Items Price: " 
                FontSize="35"
                HorizontalOptions="Center" />
            <Label 
                x:Name="newHST"
                Text="HST 13%: " 
                FontSize="35"
                HorizontalOptions="Center" />
            <Label 
                x:Name="newTip"
                Text="Tip 5%: "
                FontSize="35"
                HorizontalOptions="Center" />
            <Label 
                x:Name="newTotal"
                Text="Total: " 
                FontSize="35"
                HorizontalOptions="Center" />
            <Image
                Source="smileface.png"
                HeightRequest="200"
                WidthRequest="200"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>